<div class="space-y-5 sm:mx-auto sm:max-w-xl sm:space-y-4 lg:max-w-5xl">
    <h2 class="text-3xl font-extrabold tracking-tight sm:text-4xl">Our Projects</h2>

    <ul
        class="mx-auto grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-2 md:gap-x-3 lg:max-w-5xl lg:gap-x-8 lg:gap-y-12 xl:grid-cols-4">
        {{#each datas.projects}}
        <li>
            <div class="space-y-4">
                <img class="mx-auto h-20 w-30  lg:w-40 lg:h-40" src="/assets/images/projects/{{this.image}}" alt="">
                <div class="space-y-2">
                    <div class="text-xs font-medium lg:text-sm text-center">
                        <h3>{{this.name}}</h3>
                        <p class="pt-4 "><a
                                class="inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-blue-400 hover:bg-blue-700"
                                href="/projects/{{slug this.name 'bbbbb'}}">Details</a></p>
                    </div>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>

</div>